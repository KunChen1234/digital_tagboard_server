// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Area {
    id        Int     @id @default(autoincrement())
    areaName  String? @unique
    areaColor String?
    Users     User[]
}

model User {
    id             Int         @id @default(autoincrement())
    userID         String?     @unique
    firstName      String?
    lastName       String?
    photo          String      @default("miner.png")
    job            String?
    Area           Area?       @relation(fields: [areaName], references: [areaName])
    areaName       String?
    Department     Department? @relation(fields: [departmentName], references: [departmentName])
    departmentName String?
    LoginInfo      LoginInfo[]
}

model Department {
    id              Int     @id @default(autoincrement())
    departmentName  String? @unique
    departmentColor String?
    Users           User[]
}

model LoginInfo {
    id             Int       @id @default(autoincrement())
    User           User?     @relation(fields: [userID], references: [userID])
    userID         String    @unique
    LoginTime      String
    LampMAC        String
    LampSN         String
    Location       Location? @relation(fields: [LampBssid], references: [BSSID])
    LampBssid      String?
    LastUpdateTime String?
    isDayShift     Boolean
}

model Location {
    id           Int         @id @default(autoincrement())
    locationName String?
    BSSID        String?     @unique
    LoginInfo    LoginInfo[]
}
